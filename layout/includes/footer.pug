#footer-wrap
  if theme.footer.owner.enable
    - var now = new Date()
    - var nowYear = now.getFullYear()
    .copyright
      if theme.footer.owner.since && theme.footer.owner.since != nowYear
        span!= `&copy;${theme.footer.owner.since} - ${nowYear}  `
      else
        span!= `&copy;${nowYear}  `
      a(href=`${config.url}`)!=`${config.author}  `
